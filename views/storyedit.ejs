<%- include('partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
    <title>Story Edit</title>

    <style>
        label{
            padding-top:10px;
        }
        .inputfull {
            width: 100%;
            padding: 5px;
            display: inline-block;
            border: none;
            background: #f1f1f1;
        }
        input:focus {
            border-color:grey;
            outline:none;
        }
    </style>

</head>


<body style="background-color:#f0f0f0">

    <div class="container text-left" style="background-color:white">
            <form action='/story/edit/<%= story._id %>' method="POST">
                <label for="title">Title</label>
                <input class="inputfull"><%= story.title %></input>
                <br>
                <label for="description">Description</label>
                <textarea class="inputfull" rows="5" cols="100" name="description"><%= story.description %></textarea>
                <br>
                <a><button class="btn btn-primary">SAVE</button></a>
            </form>
    </div>

</body>
</html>

