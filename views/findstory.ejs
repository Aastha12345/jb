<%- include('partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>  

    <title>Document</title>

    
</head>
<body style="font-family:serif;letter-spacing: 1px;background-color:#f0f0f0">

    <div class="container" style="margin-top:100px;margin-bottom:20px;text-align: left;">
        <h1 style="text-align: center;">
            <%= typeof heading !='undefined'?heading:'' %>
        </h1>
        <% storys.forEach(story=> {%>
            <div class="col-md-12" style= "background-color:white;height:330px;margin:20px;">
                <img src="/uploads/story/<%=story.photo%>" onerror="this.onerror=null; this.src='/image404.jpg'" style="float:left;" width="40%" height="100%">
                <div class="col-md-4">
                    <h3><%= story.title %></h3>
                    <p maxlength="10" style="font-family:sans-serif;"> <%= story.description.substring(0,250) %>...</p>
                    <a href='/story/show/<%=story._id %>'><button class="btn btn-primary" style="margin-top:20px;">MORE INFO</button></a>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>

<%- include('partials/footer.ejs') %>